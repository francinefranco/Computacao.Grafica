def desenha():
    glClearColor(0, 0, 0, 0) 
    glClear(GL_COLOR_BUFFER_BIT | GL_DEPTH_BUFFER_BIT)
    glEnable(GL_DEPTH_TEST)
    glMatrixMode(GL_MODELVIEW)
    glLoadIdentity()

    glPushMatrix()
    glRotatef(thetaX, 1.0, 0.0, 0.0)
    glRotatef(thetaY, 0.0, 1.0, 0.0)
    glTranslatef(0.0, 0.5, 0.0)
    glScalef(0.5, 0.5, 0.5)
    cabeca()
    glPopMatrix()

    glPushMatrix()
    glRotatef(thetaX, 1.0, 0.0, 0.0)
    glRotatef(thetaY, 0.0, 1.0, 0.0)
    glTranslatef(0.0, 0.1, 0.0)
    glScalef(0.5, 0.9, 0.5)
    corpo()
    glPopMatrix()

    glPushMatrix()
    glRotatef(thetaX, 1.0, 0.0, 0.0)
    glRotatef(thetaY, 0.0, 1.0, 0.0)
    glTranslatef(0.23, 0.25, 0.0)
    glScalef(0.3, 0.17, 0.3)
    bracoEsq()
    glPopMatrix()

    glPushMatrix()
    glRotatef(thetaX, 1.0, 0.0, 0.0)
    glRotatef(thetaY, 0.0, 1.0, 0.0)
    glTranslatef(-0.23, 0.25, 0.0)
    glScalef(0.3, 0.17, 0.3)
    bracoDir()
    glPopMatrix()

    glPushMatrix()
    glRotatef(thetaX, 1.0, 0.0, 0.0)
    glRotatef(thetaY, 0.0, 1.0, 0.0)
    glTranslatef(0.42, 0.25, 0.0)
    glScalef(0.3, 0.17, 0.3)
    anteBracoEsq()
    glPopMatrix()

    glPushMatrix()
    glRotatef(thetaX, 1.0, 0.0, 0.0)
    glRotatef(thetaY, 0.0, 1.0, 0.0)
    glTranslatef(-0.42, 0.25, 0.0)
    glScalef(0.3, 0.17, 0.3)
    anteBracoDir()
    glPopMatrix()

    glPushMatrix()
    glRotatef(thetaX, 1.0, 0.0, 0.0)
    glRotatef(thetaY, 0.0, 1.0, 0.0)
    glTranslatef(0.08, -0.23, 0.0)
    glScalef(0.17, 0.34, 0.3)
    pernaEsq()
    glPopMatrix()

    glPushMatrix()
    glRotatef(thetaX, 1.0, 0.0, 0.0)
    glRotatef(thetaY, 0.0, 1.0, 0.0)
    glTranslatef(-0.08, -0.23, 0.0)
    glScalef(0.17, 0.34, 0.3)
    pernaDir()
    glPopMatrix()

    glPushMatrix()
    glRotatef(thetaX, 1.0, 0.0, 0.0)
    glRotatef(thetaY, 0.0, 1.0, 0.0)
    glTranslatef(0.08, -0.43, 0.0)
    glScalef(0.17, 0.34, 0.3)
    pernaInfEsq()
    glPopMatrix()

    glPushMatrix()
    glRotatef(thetaX, 1.0, 0.0, 0.0)
    glRotatef(thetaY, 0.0, 1.0, 0.0)
    glTranslatef(-0.08, -0.43, 0.0)
    glScalef(0.17, 0.34, 0.3)
    pernaInfDir()
    glPopMatrix()

    glFlush()

def tecladoEspecial(tecla, x, y):
    global thetaX, thetaY
    if tecla == GLUT_KEY_RIGHT:
        thetaY += 2
    elif tecla == GLUT_KEY_LEFT:
        thetaY -= 2
    elif tecla == GLUT_KEY_UP:
        thetaX += 2
    elif tecla == GLUT_KEY_DOWN:
        thetaX -= 2
    glutPostRedisplay()

def main():
    glutInit()
    glutInitDisplayMode(GLUT_SINGLE | GLUT_RGB | GLUT_DEPTH)
    glutInitWindowSize(400, 400)
    glutCreateWindow(b"Robo")
    glutDisplayFunc(desenha)
    glutSpecialFunc(tecladoEspecial)
    glutMainLoop()

if __name__ == "__main__":
    main()
